<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:more="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:textSize="16sp"
                android:text="学院新生群"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px" />
            <cn.carbs.android.expandabletextview.library.ExpandableTextView
                android:id="@+id/qqun_text_xinsheng"
                android:layout_width="match_parent"
                android:padding="30px"
                android:textColor="#888888"
                android:layout_height="wrap_content"
                android:text="@string/content"
                more:etv_ToExpandHint="展开∨"
                more:etv_ToShrinkHint="收起∧"
                more:etv_MaxLinesOnShrink="8"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9cac1" />

            <TextView
                android:textSize="16sp"
                android:text="老乡群"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px" />
            <cn.carbs.android.expandabletextview.library.ExpandableTextView
                android:id="@+id/qqun_text_laoxiang"
                android:layout_width="match_parent"
                android:padding="30px"
                android:textColor="#888888"
                android:layout_height="wrap_content"
                android:text="@string/content"
                more:etv_ToExpandHint="展开∨"
                more:etv_ToShrinkHint="收起∧"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c9cac1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>